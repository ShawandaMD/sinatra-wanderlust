<%if logged_in? == false || logged_in? == true%>
<h1><%=@entry.title%></h1>
<h1><%=@entry.date%></h1>

<p><%=@entry.city_name%>, <%=@entry.country_name%></p>

<p><%=@entry.content%></p>

<%end%>
  <div class="">

    <% if logged_in? == true && @entry.user_id == current_user.id%>
  <form action="/journal_entries/<%=@entry.id%>/edit">
  <input type="submit" value="edit">
  </form>

  <form action="/journal_entries/<%=@entry.id%>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="delete">
  </form>

  <% elsif  logged_in? == true %>

  <form action="/user/<%=current_user.id%>">
  <input type="submit" value="My Homepage">
  </form>
  <%else%>
    <% logged_in? == false %>
    <form action="/">
    <input type="submit" value="Homepage ">
    </form>

  <%end%>
</div>
